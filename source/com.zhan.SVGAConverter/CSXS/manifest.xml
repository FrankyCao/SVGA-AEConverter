<?xml version="1.0" encoding="utf-8"?>

<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" Version="6.0" ExtensionBundleId="com.zhan.SVGAConverter" ExtensionBundleVersion="1.0.1" ExtensionBundleName="SVGAConverter">
    <ExtensionList>
        <Extension Id="com.zhan.SVGAConverter" Version="1.0.1"/>
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="AEFT" Version="[13.0,15.9]"/>
            <Host Name="AEFX" Version="[13.0,15.9]"/>
            <!-- Illustrator -->
            <!-- <Host Name="ILST" Version="[18.0,18.9]" />-->
            <!-- InDesign -->
            <!-- <Host Name="IDSN" Version="[10.0,10.9]" /> -->
            <!-- Premiere -->
            <!-- <Host Name="PPRO" Version="[8.0,8.9]" /> -->
            <!-- AfterEffects -->
            <!-- <Host Name="AEFT" Version="[13.0,13.9]" /> -->
            <!-- PRELUDE -->
            <!-- <Host Name="PRLD" Version="[3.0,3.9]" />   -->
            <!-- FLASH Pro -->
            <!-- <Host Name="FLPR" Version="[14.0,14.9]" /> -->
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="5.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.zhan.SVGAConverter">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/svga.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                        <Parameter>--enable-media-stream</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                    <!-- 设置扩展面板为可视 -->
                    <!--<StartOn></StartOn>-->
                    <!-- 打开程序的时候自启动插件 -->
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <!-- 设置扩展显示为面板模式 -->
                    <Menu>SVGAConverter</Menu>
                    <!-- 设置扩展标题 -->
                    <Geometry>
                        <!-- 设置面板尺寸 -->
                        <Size>
                            <Width>472</Width>
                            <Height>575</Height>
                        </Size>
                        <MinSize>
                            <Height>472</Height>
                            <Width>575</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>472</Height>
                            <Width>575</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons/>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
